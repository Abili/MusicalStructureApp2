<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/songUrl"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:background="#eee"
        android:src="@drawable/home_music_icon"
        android:layout_height="30dp"
        android:contentDescription="@string/song_thumbnail" />

    <LinearLayout
        android:layout_toEndOf="@+id/songUrl"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:ellipsize="marquee"
            android:id="@+id/song_name"
            style="@style/fab_style"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            tools:text="@string/song_name_textview"

            android:singleLine="true" />
        <TextView
            android:ellipsize="marquee"
            android:id="@+id/artist_name"
            style="@style/fab_style"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size"
            tools:text="@string/artist_name_textview"
            android:singleLine="true" />
    </LinearLayout>


</RelativeLayout>